<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Constants for robot -->
    <xacro:property name="PI" value="3.1415926535897931" />

    <!-- robot limits -->
    <xacro:property name="max_effort" value="50.0" />
    <!-- joint limit for wheels, radian/second -->
    <xacro:property name="max_wheel_velocity" value="20.0" />
    <xacro:property name="wheel_radius" value="0.13" />
    <xacro:property name="wheel_width" value="0.08" />

    <!-- Diff wheel ode params -->
    <xacro:macro name="wheel_ode_params">
        <mu1 value="20" />
        <mu2 value="0.6" />
        <kp value="10000000.0" />
        <kd value="1" />
        <fdir1 value="1 0 0" />
    </xacro:macro>

    <!-- transmissions -->
    <xacro:macro name="wheel_transmissions" params="prefix">
        <transmission name="${prefix}_wheel_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <joint name="${prefix}">
              <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
            <actuator name="${prefix}_wheel_actuator">
              <mechanicalReduction>1</mechanicalReduction>
            </actuator>
          </transmission>
    </xacro:macro>

</robot>