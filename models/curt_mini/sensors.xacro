  </joint> -->

  <!-- LPResearch CANAL3 IMU -->
  <joint name="base_link_to_imu" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <!-- Position roughly estimated -->
    <origin xyz="0.0 -0.03 0.14" rpy="0.0 0.0 ${pi/2}"/>
  </joint>
  <link name="imu_link" />

  <!-- GPS -->
  <joint name="base_link_to_gps" type="fixed">
    <parent link="base_link" />
    <child link="gps_link" />
    <origin xyz="-0.14 0.0 0.34" />
  </joint>
  <link name="gps_link" />

  <!-- Camera -->
  <joint name="base_link_to_camera" type="fixed">
    <parent link="base_link" />
    <child link="camera_link" />
    <origin xyz="0.32 0.02 0.18" rpy="0.0 0.2792 0.0" /> <!-- 16Â° down -->
  </joint>
  <link name="camera_link" >
    <visual>
      <origin rpy="0.0 0.0 0.0" xyz="0 0 0" />
      <geometry>
          <box size="0.10 0.05 0.05" />
      </geometry>
      <material name="grey" />
  </visual>
  </link>

  <!-- lidar -->
  <joint name="base_link_to_lidar" type="fixed">
    <parent link="base_link" />
    <child link="lidar_link" />
    <origin xyz="0.2 0.0 0.4" rpy="0 0 0" />
  </joint>
  <link name="lidar_link" />

  <gazebo reference="lidar_link">
    <sensor name='gpu_lidar' type='gpu_lidar'>
      <gz_frame_id>lidar_link</gz_frame_id>
      <topic>lidar</topic>
      <update_rate>20</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1024</samples>
            <resolution>1</resolution>
            <min_angle>${-pi}</min_angle>
            <max_angle>${pi}</max_angle>
          </horizontal>
          <vertical>
            <samples>32</samples>
            <resolution>1</resolution>
            <min_angle>${-pi/4}</min_angle>
            <max_angle>${pi/4}</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.5</min>
          <max>35.0</max>
        </range>
      </ray>
      <always_on>1</always_on>
      <visualize>true</visualize>
    </sensor>
  </gazebo>
